<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>签证资料填写-亲属信息</title>
    <link href="css/common.css" rel="stylesheet" type="text/css" />
    <link href="css/lib/se/vsia_common_form.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="js/common/common.js"></script>
    <script type="text/javascript" src="plugin/My97DatePicker/WdatePicker.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#usedName-area").hide();
            $("#otherNationality-area").hide();
            $("#permanent-area").hide();
            $("#differentAddress-area").hide();
        })

        //父亲是否在美国
        function isFatherInUSRadio(flag) {
            if (flag == 'Y') {
                $("#otherNationality-area").show();
                $("#otherPassport-area1").hide();

            } else {
                $("#otherNationality-area").hide();
            }
        }
    </script>
</head>

<body>
    <div class="table-form" id="tabArea">

        <!--亲属信息-->
        <div id="relationInfoArea">
            <h2 class="area-title">亲属信息</h2>
            <div class="field-container">
                <label for="fatherFirstName" class="field-title">父亲的姓</label>
                <input type="text" id="fatherFirstName" name="fatherFirstName" class="text-input" />
                <input type="checkbox" id="notAffordFFirstName" name="notAffordFFirstName" value="" class="align-middle" />
                <label for="" class="align-middle">无法提供</label>
            </div>
            <div class="field-container">
                <label for="fatherLastName" class="field-title">父亲的名</label>
                <input type="text" id="fatherLastName" name="fatherLastName" class="text-input" />
                <input type="checkbox" id="notAffordFLastName" name="notAffordFLastName" value="" class="align-middle" />
                <label for="" class="align-middle">无法提供</label>
            </div>
            <div class="field-container">
                <label class="field-title">父亲的出生日期</label>
                <input id="fatherBirthday" name="fatherBirthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
            </div>
            <div class="field-container">
                <label class="field-title">您的父亲是否在美国？</label>
                <input type="radio" id="fatherInUSYes" name="isFatherInUS" class="align-middle" onclick="isFatherInUSRadio('Y');" />
                <label for="fatherInUSYes" class="align-middle">是</label>
                <input type="radio" id="fatherInUSNo" name="isFatherInUS" class="align-middle" onclick="isFatherInUSRadio('N');" />
                <label for="fatherInUSNo" class="align-middle">否</label>
                <div class="info-area one">

                    <label style="display: block ">请填写如下信息</label>
                    <hr/>
                    <div class="fatherIdentityInUSDiv " id="fatherIdentityInUSDivId1 ">
                        <div class="field-container ">

                            <label for="fatherIdentityInUS" class="field-title">父亲在美国的身份</label>
                            <select id="fatherIdentityInUS" name="fatherIdentityInUS">
						<option value="1" >美国公民</option>
                        <option value="2" >美国合法永久居留者</option>
                        <option value="3" >非移民</option>
                        <option value="4" selected="selected">其他/我不知道</option>
					</select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field-container">
                <label for="motherFirstName" class="field-title">母亲的姓</label>
                <input type="text" id="motherFirstName" name="motherFirstName" class="text-input" />
                <input type="checkbox" id="notAffordMFirstName" name="notAffordMFirstName" value="" class="align-middle" />
                <label for="" class="align-middle">无法提供</label>
            </div>
            <div class="field-container">
                <label for="motherLastName" class="field-title">母亲的名</label>
                <input type="text" id="motherLastName" name="motherLastName" class="text-input" />
                <input type="checkbox" id="notAffordMLastName" name="notAffordMLastName" value="" class="align-middle" />
                <label for="" class="align-middle">无法提供</label>
            </div>
            <div class="field-container">
                <label class="field-title">母亲的出生日期</label>
                <input id="motherBirthday" name="motherBirthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
            </div>
            <div class="field-container">
                <label class="field-title">您的母亲是否在美国？</label>
                <input type="radio" id="motherInUSYes" name="isMotherInUS" class="align-middle" onclick="isMotherInUSRadio('Y');" />
                <label for="motherInUSYes" class="align-middle">是</label>
                <input type="radio" id="motherInUSNo" name="isMotherInUS" class="align-middle" onclick="isMotherInUSRadio('N');" />
                <label for="motherInUSNo" class="align-middle">否</label>
                <div class="info-area one">

                    <label style="display: block ">请填写如下信息</label>
                    <hr/>
                    <div class="fatherIdentityInUSDiv " id="fatherIdentityInUSDivId1 ">
                        <div class="field-container ">
                            <label for="motherIdentityInUS" class="field-title">母亲在美国的身份</label>
                            <select id="motherIdentityInUS" name="motherIdentityInUS">
						<option value="1" >美国公民</option>
                        <option value="2" >美国合法永久居留者</option>
                        <option value="3" >非移民</option>
                        <option value="4" selected="selected">其他/我不知道</option>
					</select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field-container">
                <label class="field-title">除父母以外，您在美国是否还有其他直系亲属？</label>
                <input type="radio" id="haveImmediateRelativeYes" name="isHaveImmediateRelative" class="align-middle" onclick="isHaveImmediateRelativeRadio('Y');" />
                <label for="haveImmediateRelativeYes" class="align-middle">是</label>
                <input type="radio" id="haveImmediateRelativeNo" name="isHaveImmediateRelative" class="align-middle" onclick="isHaveImmediateRelativeRadio('N');" />
                <label for="haveImmediateRelativeNo" class="align-middle">否</label>
                <div class="info-area one">
                    <label style="display: block">请填写如下信息</label>
                    <hr/>
                    <div class="immediateRelative">
                        <div class="field-container">
                            <label for="immediateRelativeFirstName" class="field-title">直系亲属的姓</label>
                            <input type="text" id="immediateRelativeFirstName" name="immediateRelativeFirstName" class="text-input" />
                            <input type="checkbox" id="notAffordIRFirstName" name="notAffordIRFirstName" value="" class="align-middle" />
                            <label for="" class="align-middle">无法提供</label>
                        </div>
                        <div class="field-container">
                            <label for="immediateRelativeLastName" class="field-title">直系亲属的名</label>
                            <input type="text" id="immediateRelativeLastName" name="immediateRelativeLastName" class="text-input" />
                            <input type="checkbox" id="notAffordIRLastName" name="notAffordIRLastName" value="" class="align-middle" />
                            <label for="" class="align-middle">无法提供</label>
                        </div>
                        <div class="field-container">
                            <label for="relationWithYou" class="field-title">直系亲属和您的关系</label>
                            <select id="relationWithYou" name="relationWithYou">
						<option value="1" >配偶</option>
                        <option value="2" >未婚夫/妻</option>
                        <option value="3" >子女</option>
                        <option value="4" selected="selected">兄弟姐妹</option>
					</select>
                        </div>
                        <div class="field-container">
                            <label for="immediateRelativeIdentityInUS" class="field-title">直系亲属在美国的身份</label>
                            <select id="immediateRelativeIdentityInUS" name="immediateRelativeIdentityInUS">
						<option value="1" >美国公民</option>
                        <option value="2" >美国合法永久居留者</option>
                        <option value="3" >非移民</option>
                        <option value="4" selected="selected">其他/我不知道</option>
					</select>
                        </div>
                        <div id="operate_immediateRelative_menu" class="control-menu">
                            <a href="javascript:void(0)" onclick="addImmediateRelative()">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)" onclick="removeImmediateRelative()">删除</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="field-container">
                <label class="field-title">您在美国是否还有其他亲属？</label>
                <input type="radio" id="haveOtherRelativeYes" name="ishaveOtherRelative" class="align-middle" onclick="ishaveOtherRelativeRadio('Y');" />
                <label for="haveOtherRelativeYes" class="align-middle">是</label>
                <input type="radio" id="haveImmediateRelativeNo" name="ishaveOtherRelative" class="align-middle" onclick="ishaveOtherRelativeRadio('N');" />
                <label for="haveOtherRelativeNo" class="align-middle">否</label>
            </div>
            <div class="info-area one">
                <label style="display: block">请填写如下married信息</label>
                <hr/>
                <div class="marriedSpouseDiv" id="marriedSpouseDiv">
                    <div class="field-container">
                        <label for="marriedSpouseGivenName" class="field-title">配偶的姓</label>
                        <input type="text" id="marriedSpouseGivenName" name="marriedSpouseGivenName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label for="marriedSpouseLastName" class="field-title">配偶的名</label>
                        <input type="text" id="marriedSpouseLastName" name="marriedSpouseLastName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label class="field-title">配偶的出生日期</label>
                        <input id="marriedSpouseBirthday" name="marriedSpouseBirthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
                    </div>
                    <div class="field-container">
                        <label for="marriedSpouseNationality" class="field-title">配偶的国籍</label>
                        <select id="marriedSpouseNationality" name="marriedSpouseNationality">
						<option value="CHIN" selected="selected">中国</option>
				    </select>
                    </div>
                    <div class="field-container">
                        <label for="marriedSpouseBirthCity" class="field-title">配偶的出生城市</label>
                        <input type="text" id="marriedSpouseBirthCity" name="marriedSpouseBirthCity" class="text-input">
                        <input type="checkbox" id="notAffordMarriedSpouseBirthCity" name="notAffordMarriedSpouseBirthCity" value="" class="align-middle" />
                        <label for="" class="align-middle">无法提供</label>
                    </div>
                    <div class="field-container">
                        <label for="marriedSpouseBirthCountry" class="field-title">配偶的出生国家</label>
                        <select id="marriedSpouseBirthCountry" name="marriedSpouseBirthCountry">
						<option value="CHIN" selected="selected">中国</option>
				</select>
                    </div>
                    <div class="field-container">
                        <label for="marriedSpouseAddress" class="field-title">配偶的住址</label>
                        <select id="marriedSpouseAddress" name="marriedSpouseAddress">
						<option value="CHIN" selected="selected">其他</option>
				        </select>
                    </div>

                    <div class="info-area two" style="width: 270px;margin-top: 15px;padding-left: 10px">

                        <label style="display: block">请填写如下（配偶地址）信息</label>
                        <hr/>
                        <div class="otherMarriedSpouseAddressDiv" id="otherMarriedSpouseAddressDiv">
                            <div class="field-container">
                                <label for="otherMarriedSpouseAddress1" class="field-title">通信地址</label>
                                <input type="text" id="otherMarriedSpouseAddress" name="otherMarriedSpouseAddress" class="text-input">
                            </div>
                            <div class="field-container">
                                <label for="otherMarriedSpouseCity" class="field-title">城市</label>
                                <input type="text" id="otherMarriedSpouseCity" name="otherMarriedSpouseCity" class="text-input">
                            </div>
                            <div class="field-container">
                                <label for="otherMarriedSpouseProvince" class="field-title">省份</label>
                                <input type="text" id="otherMarriedSpouseProvince" name="otherMarriedSpouseProvince" class="text-input">
                                <input type="checkbox" id="otherMarriedSpouseProvinceBox" name="otherMarriedSpouseProvinceBox" />
                                <label for="otherMarriedSpouseProvinceBox">没有/无法提供</label>
                            </div>
                            <div class="field-container">
                                <label for="otherMarriedSpousePostCode" class="field-title">邮编</label>
                                <input type="text" id="otherMarriedSpousePostCode" name="otherMarriedSpousePostCode" class="text-input">
                                <input type="checkbox" id="otherMarriedSpousePostCodeBox" name="otherMarriedSpousePostCodeBox" />
                                <label for="otherMarriedSpousePostCodeBox">没有/无法提供</label>
                            </div>
                            <div class="field-container">
                                <label for="otherMarriedSpouseCountry" class="field-title">国家</label>
                                <select id="otherMarriedSpouseCountry" name="otherMarriedSpouseCountry">
						            <option value="CHIN" selected="selected">中国</option>
					                </select>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="info-area one" style="width: 270px;margin-top: 15px;padding-left: 10px">
                <label style="display: block">请填写如下DIVORCED信息</label>
                <hr/>
                <div class="divorceSpouseDiv" id="divorceSpouseDiv">
                    <div class="field-container">
                        <label for="formerSpouseNum" class="field-title">前配偶数量</label>
                        <input type="text" id="formerSpouseNum" name="formerSpouseNum" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label for="divorceSpouseGivenName" class="field-title">配偶的姓</label>
                        <input type="text" id="divorceSpouseGivenName" name="divorceSpouseGivenName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label for="divorceSpouseLastName" class="field-title">配偶的名</label>
                        <input type="text" id="divorceSpouseLastName" name="divorceSpouseLastName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label class="field-title">配偶的出生日期</label>
                        <input id="divorceSpouseBirthday" name="divorceSpouseBirthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
                    </div>
                    <div class="field-container">
                        <label for="divorceSpouseNationality" class="field-title">配偶的国籍</label>
                        <select id="divorceSpouseNationality" name="divorceSpouseNationality">
						<option value="CHIN" selected="selected">中国</option>
				</select>
                    </div>
                    <div class="field-container">
                        <label for="divorceSpouseBirthCity" class="field-title">配偶的出生城市</label>
                        <input type="text" id="divorceSpouseBirthCity" name="divorceSpouseBirthCity" class="text-input">
                        <input type="checkbox" id="notAffordDivorceSpouseBirthCity" name="notAffordDivorceSpouseBirthCity" value="" class="align-middle" />
                        <label for="" class="align-middle">无法提供</label>
                    </div>
                    <div class="field-container">
                        <label for="divorceSpouseBirthCountry" class="field-title">配偶的出生国家</label>
                        <select id="divorceSpouseBirthCountry" name="divorceSpouseBirthCountry">
						<option value="CHIN" selected="selected">中国</option>
				</select>
                    </div>
                    <div class="field-container">
                        <label class="field-title">结婚日期</label>
                        <input id="divorce_marriageDate" name="divorce_marriageDate" class="Wdate text-input" type="text" onclick="WdatePicker()" />
                    </div>
                    <div class="field-container">
                        <label class="field-title">离婚日期</label>
                        <input id="divorceDate" name="divorceDate" class="Wdate text-input" type="text" onclick="WdatePicker()" />
                    </div>
                    <div class="field-container">
                        <label for="divorceReason" class="field-title">离婚原因</label>
                        <input type="text" id="divorceReason" name="divorceReason" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label for="divorceCountry" class="field-title">离婚地点</label>
                        <select id="divorceCountry" name="divorceCountry">
						<option value="CHIN" selected="selected">中国</option>
				</select>
                    </div>
                    <div id="operate_divorceSpouse_menu" class="control-menu">
                        <a href="javascript:void(0)" onclick="addDivorceSpouse()">添加</a>&nbsp;&nbsp;
                        <a href="javascript:void(0)" onclick="removeDivorceSpouse()">删除</a>
                    </div>

                </div>
            </div>





            <div class="info-area one" style="width: 270px;margin-top: 15px;padding-left: 10px">
                <label style="display: block">请填写如下WIDOWED信息</label>
                <hr/>
                <div class="widowedSpouseDiv" id="widowedSpouseDiv">
                    <div class="field-container">
                        <label for="widowedSpouseGivenName" class="field-title">配偶的姓</label>
                        <input type="text" id="widowedSpouseGivenName" name="widowedSpouseGivenName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label for="widowedSpouseLastName" class="field-title">配偶的名</label>
                        <input type="text" id="widowedSpouseLastName" name="widowedSpouseLastName" class="text-input" />
                    </div>
                    <div class="field-container">
                        <label class="field-title">配偶的出生日期</label>
                        <input id="widowedSpouseBirthday" name="widowedSpouseBirthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
                    </div>
                    <div class="field-container">
                        <label for="widowedSpouseNationality" class="field-title">配偶的国籍</label>
                        <select id="widowedSpouseNationality" name="widowedSpouseNationality">
						<option value="CHIN" selected="selected">中国</option>
				</select>
                    </div>
                    <div class="field-container">
                        <label for="widowedSpouseBirthCity" class="field-title">配偶的出生城市</label>
                        <input type="text" id="widowedSpouseBirthCity" name="widowedSpouseBirthCity" class="text-input">
                        <input type="checkbox" id="notAffordWidowedSpouseBirthCity" name="notAffordWidowedSpouseBirthCity" value="" class="align-middle" />
                        <label for="" class="align-middle">无法提供</label>
                    </div>
                    <div class="field-container">
                        <label for="widowedSpouseBirthCountry" class="field-title">配偶的出生国家</label>
                        <select id="widowedSpouseBirthCountry" name="widowedSpouseBirthCountry">
						<option value="CHIN" selected="selected">中国</option>
				</select>

                    </div>

                </div>
            </div>




        </div>
        <!-- 基本信息 -->

    </div>
    <!-- o -->
</body>

</html>