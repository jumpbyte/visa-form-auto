 var visaCommon = {
     attachSwitchEvent: function() {
         $("input[type='checkbox']").on("change", function() {
             var input = $(this).siblings("input")
             var checked = $(this).prop("checked");
             if (input) {
                 if (checked) {
                     $(input).prop("disabled", true);
                 } else {
                     $(input).prop("disabled", false);
                 }
             }
         });
         $("input[type='radio']").on("change", function() {
             var ctlEle = $(this).siblings("div[class*='info-area']");
             var checked = $(this).prop("checked");
             var isYes = $(this).val().toUpperCase() == "Y" || $(this).val() == "1";
             var isNo = $(this).val().toUpperCase() == "N" || $(this).val() == "0";
             if (ctlEle) {
                 if (checked && isYes) {
                     $(ctlEle).show(300);
                 } else if (checked && isNo) {
                     $(ctlEle).hide(300);
                 }
             }
         })
     },
     attachAddDelEvent: function() {
         $("div.control-menu").each(function(index) {
             var controlMenu = $(this);
             var container = controlMenu.parent().parent();
             var btns = $(this).children("a");
             var addBtn = $(btns[0]);
             var delBtn = $(btns[1]);
             $(addBtn).on("click", function() {
                 var clone = controlMenu.parent().clone(true);
                 container.append(clone.hide());
                 clone.show(300);
             });
             $(delBtn).on("click", function() {
                 $(this).parent().parent().hide(300, function() {
                     $(this).remove();
                 });
             });
         });
     }
 }