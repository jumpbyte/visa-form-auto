<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>签证资料填写-职业与教育信息</title>
    <link href="css/common.css" rel="stylesheet" type="text/css" />
    <link href="css/lib/se/vsia_common_form.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="js/common/common.js"></script>
    <script type="text/javascript" src="plugin/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="js/lib/se/visa_common_form.js"></script>
    <script type="text/javascript" src="plugin/jquery-validation/jquery.validate.js"></script>
    <script type="text/javascript" src="plugin/jquery-validation/localization/messages_zh.js"></script>
    <script type="text/javascript">
        $().ready(function() {

            var options = {
                validateOptions: {
                    rules: {
                        email: {
                            required: true,
                            email: true
                        },
                        unitStreet: {
                            required: true,
                            maxlength: 88
                        }
                    },
                    messages: {
                        gender: "请选择性别！",
                        idCardCode: "请填写身份证号"
                    }
                }
            };
            var formHelper = new VisaFormHelper(options);
            formHelper.init();
            formHelper.bindEvents();
        });
    </script>
</head>

<body>
    <div class="table-form">
        <form id="visa-form" action="">
            <input id="para-country" type="hidden" name="para.country" value="us" />
            <input id="para-page-type" type="hidden" name="para.pageType" value="" />
            <input id="para-op" type="hidden" name="para.op" value="update" />
            <input id="para-form-id" type="hidden" name="para.formId" value="" />
            <input id="para-form-num" type="hidden" name="para.formSerialNum" value="" />
            <input id="para-progress" type="hidden" name="para.progress" value="E" />
            <div id="workInfo">
                <h2 class="area-title">职业信息</h2>
                <div class="field-container">
                    <span class="field-title">现在的职业</span>
                    <select name="primaryOccupation" id="primaryOccupation" data-show-condition title="请选择职业！" required>
                        <option value>--请选择--</option>
                        <option value="A">农业</option>
                        <option value="AP">艺术家/表演家</option>
                        <option value="N" data-show-area="noWorkArea">待业</option>
                        <option value="O" data-show-area="otherWorkArea">其他</option>
                    </select>
                    <div id="noWorkArea" class="area info-area one hidden">
                        <div class="field-container">
                            <label for="noWorkExplain" class="field-title">待业原因说明</label>
                            <textarea required name="noWorkExplain" id="noWorkExplain" cols="31" rows="2"></textarea>
                        </div>
                    </div>
                    <div id="otherWorkArea" class="area info-area one hidden">
                        <div class="field-container">
                            <label for="otherOccupation" class="field-title">其他职业说明</label>
                            <textarea required name="otherOccupation" id="otherOccupation" cols="31" rows="2"></textarea>
                        </div>
                    </div>
                </div>
                <div class="field-container">
                    <label class="field-title">现在工作单位或学校名称</label>
                    <input id="unitName" name="unitName" class="text-input" type="text" required />
                </div>
                <div class="field-container">
                    <label class="field-title">现在工作单位或学校地址</label>
                    <input id="unitStreet" name="unitStreet" class="address-input" type="text" required />
                </div>
                <div class="field-container">
                    <label class="field-title">城市</label>
                    <input id="unitCity" name="unitCity" class="text-input" type="text" required />
                </div>
                <div class="field-container">
                    <label class="field-title">省份</label>
                    <input id="unitProvince" name="unitProvince" class="text-input" type="text" required />
                    <input type="checkbox" id="noProvince" name="noProvince" value="" class="align-middle">
                    <label for="noProvince" class="align-middle">没有/无法提供</label>
                </div>
                <div class="field-container">
                    <label class="field-title">邮编</label>
                    <input id="unitZipCode" name="unitZipCode" class="text-input" type="text" required />
                    <input type="checkbox" id="noUnitZipCode" name="noUnitZipCode" value="" class="align-middle">
                    <label for="noUnitZipCode" class="align-middle">没有/无法提供</label>
                </div>
                <div class="field-container">
                    <label class="field-title">单位电话</label>
                    <input id="unitTel" name="unitTel" class="text-input phone" type="text" required />
                </div>
                <div class="field-container">
                    <span class="field-title">国家</span>
                    <select name="unitCountry" id="unitCountry" title="请选择国家！" required>
                        <option value>--请选择--</option>
                    <option value="CHIN" >中国</option>
                </select>
                </div>
                <div class="field-container">
                    <label class="field-title">月薪</label>
                    <input id="income" name="income" class="text-input" type="text" required />
                    <input type="checkbox" id="noIncome" name="noIncome" value="" class="align-middle">
                    <label for="noIncome" class="align-middle">没有/无法提供</label>
                </div>
                <div class="field-container">
                    <label for="" class="field-title">请简要描述您的工作职责</label>
                    <textarea required name="duteDescription" id="duteDescription" cols="31" rows="3"></textarea>
                </div>
                <div class="field-container">
                    <span class="field-title">您之前是否有工作？</span>
                    <input type="radio" id="haveWorkedYes" name="haveWorked" value="Y" data-tpl-id="prework-template" class="align-middle" />
                    <label for="haveWorked" class="align-middle">是</label>
                    <input type="radio" id="haveWorkedNo" name="haveWorked" value="N" checked="checked" class="align-middle" />
                    <label for="haveWorked" class="align-middle">否</label>
                    <div class="area info-area one hidden">
                        <span class="field-title">请在下方提供先前单位/工作信息</span>
                        <hr/>
                        <input type="hidden" id="workCount" counter name="workCount" value="0" />

                        <!--工作单位占位-->
                        <div id="operate_prework_menu" class="control-menu">
                            <a href="javascript:void(0)">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)">删除</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
            <br/>
            <div id="eduInfo">
                <h2 class="area-title">教育经历</h2>
                <div class="field-container">
                    <span class="field-title">您是否有中学及以上的教育经历？</span>
                    <input type="radio" id="attendedYes" name="attended" value="Y" data-tpl-id="edu-template" class="align-middle" />
                    <label for="attendedYes" class="align-middle">是</label>
                    <input type="radio" id="attendedNo" name="attended" value="N" checked="checked" class="align-middle" />
                    <label for="attendedNo" class="align-middle">否</label>
                    <div class="area info-area one hidden">
                        <span class="field-title">请提供以下有关你曾学习过的教育机构信息</span>
                        <input type="hidden" id="eduCount" counter name="eduCount" value="0" />
                        <!--教育经历占位-->
                        <div id="operate_edu_menu" class="control-menu">
                            <a href="javascript:void(0)">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)">删除</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="operate-menu-area">
        <div class="button float-left">
            <a id="preBtn" class="prestep" data-pre-url="loadRelativeInfo" href="javascript:void(0)">上一步:亲属信息</a>
        </div>
        <div class="button float-left">
            <a id="saveBtn" class="save" href="javascript:void(0)">保存</a>
        </div>
        <div class="button float-left">
            <a id="nextBtn" class="nextstep" data-next-url="loadOtherInfo" href="javascript:void(0)">下一步:其他信息</a>
        </div>
    </div>
</body>
<script id="prework-template" type="text/html">
    <div class="repeat">
        <div class="field-container">
            <label class="field-title">工作单位名称</label>
            <input id="preUnitName" name="preUnitName" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">单位地址</label>
            <input id="preUnitStreet" name="preUnitStreet" class="address-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">城市</label>
            <input id="preUnitCity" name="preUnitCity" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">省份</label>
            <input id="preUnitProvince" name="preUnitProvince" class="text-input" type="text" required />
            <input type="checkbox" id="noPreProvince" name="noPreProvince" value="" class="align-middle">
            <label for="noPreProvince" class="align-middle">没有/无法提供</label>
        </div>
        <div class="field-container">
            <label class="field-title">邮编</label>
            <input id="preUnitZipCode" name="preUnitZipCode" class="text-input" type="text" required />
            <input type="checkbox" id="noPreUnitZipCode" name="noPreUnitZipCode" value="" class="align-middle">
            <label for="noPreUnitZipCode" class="align-middle">没有/无法提供</label>
        </div>
        <div class="field-container">
            <label class="field-title">单位电话</label>
            <input id="preUnitTel" name="preUnitTel" class="text-input phone" type="text" required />
        </div>
        <div class="field-container">
            <span class="field-title">国家</span>
            <select name="preUnitCountry" id="preUnitCountry" title="请选择国家！" required>
                <option value>--请选择--</option>
                <option value="CHIN">中国</option>
            </select>
        </div>

        <div class="field-container">
            <label class="field-title">职位</label>
            <input id="jobTitle" name="jobTitle" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">上级领导的姓氏</label>
            <input id="supervisorSurname" name="supervisorSurname" class="text-input" type="text" required />
            <input type="checkbox" id="notKnowSupervisorSurname" name="notKnowSupervisorSurname" value="Y" class="align-middle">
            <label for="notKnowSupervisorSurname" class="align-middle">不知道</label>
        </div>
        <div class="field-container">
            <label class="field-title">上级领导的名字</label>
            <input id="supervisorGivenName" name="supervisorGivenName" class="text-input" type="text" required />
            <input type="checkbox" id="notKnowSupervisorGivenName" name="notKnowSupervisorGivenName" value="Y" class="align-middle">
            <label for="notKnowSupervisorGivenName" class="align-middle">不知道</label>
        </div>
        <div class="field-container">
            <label class="field-title">入职日期</label>
            <input id="workFromDate" name="workFromDate" class="Wdate text-input" type="text" required onclick="WdatePicker()" />
        </div>
        <div class="field-container">
            <label class="field-title">离职日期</label>
            <input id="workToDate" name="workToDate" class="Wdate text-input" type="text" required onclick="WdatePicker()" />
        </div>
        <div class="field-container">
            <label for="" class="field-title">职责说明</label>
            <textarea required name="duteDescription" id="duteDescription" cols="31" rows="2"></textarea>
        </div>
</script>

<script id="edu-template" type="text/html">
    <div class="repeat">
        <div class="field-container">
            <label class="field-title">教育机构名称</label>
            <input id="institutionName" name="institutionName" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">教育机构地址</label>
            <input id="institutionStreet" name="institutionStreet" class="address-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">城市</label>
            <input id="institutionCity" name="institutionCity" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">省份</label>
            <input id="institutionProvince" name="institutionProvince" class="text-input" type="text" required />
            <input type="checkbox" id="noInstitutionProvince" name="noInstitutionProvince" value="" class="align-middle">
            <label for="noInstitutionProvince" class="align-middle">没有/无法提供</label>
        </div>
        <div class="field-container">
            <label class="field-title">邮编</label>
            <input id="institutionZipCode" name="institutionZipCode" class="text-input" type="text" required />
            <input type="checkbox" id="noInstitutionZipCode" name="noInstitutionZipCode" value="" class="align-middle">
            <label for="noInstitutionZipCode" class="align-middle">没有/无法提供</label>
        </div>
        <div class="field-container">
            <span class="field-title">国家</span>
            <select name="institutionCountry" id="institutionCountry" title="请选择国家！" required>
                <option value>--请选择--</option>
                <option value="CHIN" selected="selected">中国</option>
            </select>
        </div>
        <div class="field-container">
            <label class="field-title">课程/专业名称</label>
            <input id="course" name="course" class="text-input" type="text" required />
        </div>
        <div class="field-container">
            <label class="field-title">就读开始日期</label>
            <input id="attendFromDate" name="attendFromDate" class="Wdate text-input" type="text" required onclick="WdatePicker()" />
        </div>
        <div class="field-container">
            <label class="field-title">就读结束日期</label>
            <input id="attendToDate" name="attendToDate" class="Wdate text-input" type="text" required onclick="WdatePicker()" />
        </div>
    </div>
</script>

</html>