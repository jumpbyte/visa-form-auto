body {
    padding-left: 20px;
    width: 900px;
}

body * {
    font-size: 16px;
}

.clear {
    clear: both;
}

select {
    width: 260px;
    height: 28px;
}

.table-form {
    padding: 5px 5px 5px
}

div.table-form .error {
    color: red;
}

div.table-form label.error {
    display: none;
}

.area-title {
    font-size: 20px;
    color: hotpink;
}

.field-container {
    display: block;
    margin-top: 10px;
}

.field-container .field-title {
    display: block;
    margin-bottom: 3px;
}

.field-container .text-input {
    width: 260px;
    height: 25px;
}

.field-container .address-input {
    width: 320px;
    height: 25px;
}

.info-area {
    background-color: #cad3e9;
}

.one {
    margin: 5px 0px 5px 0px;
    padding: 5px 0px 10px 5px;
    background-color: beige;
    width: 560px;
}

.two {
    margin: 5px 0px 5px 5px;
    padding: 5px 0px 10px 5px;
    background-color: bisque;
    width: 500px;
}

.control-menu {
    display: inline-block;
    margin: 5px 0px 0px 180px
}

.align-middle {
    vertical-align: middle;
}

.hidden {
    display: none;
}

.show {
    display: block;
    visibility: visible;
}