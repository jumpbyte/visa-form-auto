@charset "gb2312";
/* CSS Document */

*{ padding:0; margin:0}
a { text-decoration:none}

.header-inbox{ margin:20px 0px 20px 25px; }
.containe { width:980px; height:700px; border:#666 1px solid; margin-left:20px; position:relative; }
.bottom-input { width:871px; height:80px; bottom:0px; right:0px; position:absolute;}
.consignee { width:11%;  height:100%;  border-right:#666 1px solid; background: rgb(230, 230, 230); float:left;}
.consignee p { padding-left:6px; margin-bottom:3px; }
.consignee p:hover {  background:#c5c5c5;}
.consignee h5, .receiving h5{ font-family:풕턼환쥌; font-size:13px; font-weight:blod; line-height:35px;}
.consignee a { line-height:29px;font-size:13px; font-weight:200; color:#000;width:100px;height:30px;display:block}
 .receiving p,.receiving-r p { line-height:20px;font-size:12px; font-weight:200; padding:4px 5px; background:#fff; border-radius:7px;
  -moz-border-radius: 7px;      /* Gecko browsers */
    -webkit-border-radius: 7px;   /* Webkit browsers */
    border-radius:7px;            /* W3C syntax */
   margin-bottom:2px;
   margin-left:56px;
  border:#cdcdcd 1px solid;
  display: inline-block;
  position:relative;
 }
 .receiving b{ position:absolute; top:3px; font-family:풕턼환쥌; font-size:12px;  line-height:22px;left: -51px; font-weight:bold;}
.receiving-r b{ position:absolute; top:3px; font-family:풕턼환쥌; font-size:12px;  line-height:22px; right:-51px;font-weight:bold;}
.receiving { padding:5px;  width:aotu; max-width:65%;   padding-left:7px; clear: both;}
.receiving-r { padding:5px 5px 5px 7px; width:aotu; max-width:65%;  margin-right:56px; float:right; clear: right;}
.receiving span{ color:#b1b1b1; font-family:풕턼환쥌; font-size:12px; text-align:left; display:block;  line-height:19px; padding-left:50px;}
.receiving-r span { color:#b1b1b1; font-family:풕턼환쥌; font-size:12px; text-align:right; display:block;  line-height:19px; padding-right:5px;}
.wrap-re {float:left; width:870px; overflow-y:scroll; height:85%; border-bottom: #8db7c2 2px solid; background:rgb(246, 246, 246)}
.history-btn { position:absolute; top:60px; right:260px; }
.history-btn a ,.clean-btn a {  background:#6699ff; cursor:pointer; color:#fff; padding: 2px 5px; border-radius:4px;
  -moz-border-radius: 4px;      /* Gecko browsers */
    -webkit-border-radius: 4px;   /* Webkit browsers */
    border-radius:4px;            /* W3C syntax */
  border:#006ee9 1px solid;
  font-size:12px;}
  .send-btn a{  background:#a3a3a3; cursor:pointer; color:#fff; padding: 5px 39px; border-radius:32px;
  -moz-border-radius: 32px;      /* Gecko browsers */
    -webkit-border-radius: 32px;   /* Webkit browsers */
    border-radius:32px;            /* W3C syntax */
  border:#808080 1px solid;
  font-size:16px;
  text-align:center;}
.clean-btn a:hover { background:#4e85f1;  }
.history-btn a:hover { background:#4e85f1;  }
.send-btn a:hover{ background: #ff00a2; border:#a22b74 1px solid;}
.clean-btn {
    position: absolute;
    top: 80px;
    right: 340px; }
.send-btn { position: absolute;
           top: 50px;
           right: 45px; }	
textarea{ width: 855px;
height: 60px;
 border:none; padding:6px;
 font-size:13px; color:#333;
 outline:none}
 
