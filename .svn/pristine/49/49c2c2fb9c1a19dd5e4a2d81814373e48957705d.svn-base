body,html,p,h1,h2,h3,h4,h5,h6,ul,li{margin:0;padding:0;}
img{border:none;}
ul,li{list-style:none;}
a{text-decoration:none;}



header{background:#1c1b20;color:#fff;width:100%;height:45px;line-height:45px;text-align:center;}
header a{color:#fff;}
header img{width:60%;height:60%;}

header .left{float:left;}
header .cent{font-size:18px;position:relative;left:-8px;}
header .right{float:right;}
.con_fh{width:19%;line-height:40px;position:relative;top:4px;padding-right:4px;}

.tit{background:#957ee2;height:45px;line-height:45px;color:#fff;text-align:center;font-size:14px;}


.nav{width:100%;overflow:auto;clear:both;font-size:12px;margin-top:20px;margin-bottom:15px;}
.nav ul{width:60%;margin:0 auto;overflow:auto;clear:both;text-align:center;}
.nav li{float:left;width:14%;padding-left:9%;cursor:pointer;}
.nav li a{color:#aaa;}
.nav a:link {color:#ccc;}
/*.nav a:hover , .nav a:visited{color:#6699ff;}*/
.a_xz{color:#6699ff;}

.content{width:100%;text-align:center;}
.content_in{width:96%;margin:5px 2%;border:1px solid #eee;}
.con_p1{padding:7px 0;background:#f7f7f7;font-size:14px;}

.btn{width:100%;padding:10px 0;background:#957ee2;border:1px solid #957ee2;color:#fff;margin-top:15px;}
.con_index{text-align:left;text-indent:2rem;font-size:14px;padding:20px 2px;}

table{width:100%;text-align:left;font-size:14px;}
.td1{width:30%;}
td{border:1px solid #eee;padding:6px 4px;}
input{border-radius:4px;outline:none;background:none;}

.click_b{width:96%;margin:0 2%;text-align:left;color:#fff;margin-bottom:20px;}
.btn_n{width:48%;padding:10px 0;border:none;background:#ccc;margin-right:4%;color:#fff;outline:none;}
.btn_d{width:48%;padding:10px 0;border:none;background:#957ee2;color:#fff;outline:none;}

.con_radio{text-align:left;margin:8px 4px;}

.tx{border:none;border-bottom:1px solid #ccc;width:20%;}
.space{margin:4px 0;font-size:14px;}
h6{margin-top:15px;}

textarea{width:95%;outline:none;margin:0 2%;height:100px;background:none;color:#ccc;}

.click_bb button{border:none;padding:8px 0;color:#fff;background:#ccc;outline:none;}
button.bj{background:#957ee2;}