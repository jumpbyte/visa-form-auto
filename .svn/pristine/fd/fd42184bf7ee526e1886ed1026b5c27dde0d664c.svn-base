<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>签证资料填写-基本信息</title>
    <link href="css/common.css" rel="stylesheet" type="text/css" />
    <link href="css/lib/se/vsia_common_form.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="js/common/common.js"></script>
    <script type="text/javascript" src="plugin/My97DatePicker/WdatePicker.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#usedName-area").hide();
            $("#otherNationality-area").hide();
            $("#permanent-area").hide();
            $("#differentAddress-area").hide();
        })


        function addUsedName() {
            // var child = $(".usedNameDiv").clone();
            //$(selector).prop({property:value, property:value,...})
            var $div = $('div[id^="usedNameDivId"]:last');
            var num = parseInt($div.prop("id").match(/\d+/g), 10) + 1;
            var $usedNameDivId = $div.clone().prop('id', 'usedNameDivId' + num);
            $usedNameDivId.find('input[id=usedFirstName' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'usedFirstName' + num,
                'name': 'usedFirstName' + num
            });
            $usedNameDivId.find('input[id=usedLastName' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'usedLastName' + num,
                'name': 'usedLastName' + num
            });
            var operatorMenu = $("#operate_usedName_menu");
            $usedNameDivId.insertBefore(operatorMenu);
        }

        function removeUsedName() {
            var usedName = $("#usedName-area .usedNameDiv");
            if (usedName && usedName.length > 1) {
                usedName[usedName.length - 1].remove();
            }
        }


        function addOtherNationality() { //1

            var $div = $('div[id^="otherNationalityDivId"]:last');
            var num = parseInt($div.prop("id").match(/\d+/g), 10) + 1;
            var $otherNationalityDivId = $div.clone().prop('id', 'otherNationalityDivId' + num);
            $otherNationalityDivId.find('select[id=otherNationality' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'otherNationality' + num,
                'name': 'otherNationality' + num
            });

            $otherNationalityDivId.find('div[id=otherPassport-area' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'otherPassport-area' + num
                    //'style': 'diplay:none'
            });
            $otherNationalityDivId.find('input[id=otherPassportYes' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'otherPassportYes' + num,
                'name': 'isHaveOtherPassport' + num,
                'onclick': 'otherPassportRadio("Y","' + num + '");'
            });
            $otherNationalityDivId.find('input[id=otherPassportNo' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'otherPassportNo' + num,
                'name': 'isHaveOtherPassport' + num,
                'onclick': 'otherPassportRadio("N","' + num + '");'
            });

            var operatorMenu = $("#operate_otherNationality_menu");
            $otherNationalityDivId.insertBefore(operatorMenu);

            $("#otherPassport-area" + num).hide();

        }

        //其他国籍
        function otherNationalityRadio(flag) {
            if (flag == 'Y') {
                $("#otherNationality-area").show();
                $("#otherPassport-area1").hide();

            } else {
                $("#otherNationality-area").hide();
            }
        }
        //其他护照
        function otherPassportRadio(flag, num) {
            if (flag == 'Y') {
                $("#otherPassport-area" + num).show();

            } else {
                $("#otherPassport-area" + num).hide();
            }
        }



        function removeOtherNationality() {
            var lostPassports = $("#otherNationality-area .otherNationalityDiv");
            if (lostPassports && lostPassports.length > 1) {
                lostPassports[lostPassports.length - 1].remove();
            }
        }

        function addOtherPassport() {
            var child = $(".otherPassportDiv").clone();
            var operatorMenu = $("#operate_otherPassport_menu");
            child.insertBefore(operatorMenu);
        }

        function removeOtherPassport() {
            var lostPassports = $("#otherPassport-area .otherPassportDiv");
            if (lostPassports && lostPassports.length > 1) {
                lostPassports[lostPassports.length - 1].remove();
            }
        }

        function addPermanent() {
            //var child = $(".permanentDiv").clone();
            var $div = $('div[id^="permanentDivId"]:last');
            var num = parseInt($div.prop("id").match(/\d+/g), 10) + 1;
            var $permanentDivId = $div.clone().prop('id', 'permanentDivId' + num);
            $permanentDivId.find('select[id=permanent' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'permanent' + num,
                'name': 'permanent' + num
            });

            var operatorMenu = $("#operate_permanent_menu");
            $permanentDivId.insertBefore(operatorMenu);

            //var operatorMenu = $("#operate_permanent_menu");
            //child.insertBefore(operatorMenu);
        }

        function removePermanent() {
            var lostPassports = $("#permanent-area .permanentDiv");
            if (lostPassports && lostPassports.length > 1) {
                lostPassports[lostPassports.length - 1].remove();
            }
        }

        function addDifferentAddress() {
            //var child = $(".differentAddressDiv").clone();

            var $div = $('div[id^="differentAddressDivId"]:last');
            var num = parseInt($div.prop("id").match(/\d+/g), 10) + 1;
            var $differentAddressDivId = $div.clone().prop('id', 'differentAddressDivId' + num);
            $differentAddressDivId.find('input[id=differentAddress' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentAddress' + num,
                'name': 'differentAddress' + num
            });
            $differentAddressDivId.find('input[id=differentAddressOther' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentAddressOther' + num,
                'name': 'differentAddressOther' + num
            });
            $differentAddressDivId.find('input[id=differentCity' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentCity' + num,
                'name': 'differentCity' + num
            });
            $differentAddressDivId.find('input[id=differentProvince' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentProvince' + num,
                'name': 'differentProvince' + num
            });
            $differentAddressDivId.find('input[id=differentPostCode' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentPostCode' + num,
                'name': 'differentPostCode' + num
            });
            $differentAddressDivId.find('select[id=differentCountry' + parseInt($div.prop("id").match(/\d+/g), 10) + ']').prop({
                'id': 'differentCountry' + num,
                'name': 'differentCountry' + num
            });

            // var operatorMenu = $("#operate_permanent_menu");
            // $permanentDivId.insertBefore(operatorMenu);

            var operatorMenu = $("#operate_differentAddress_menu");
            $differentAddressDivId.insertBefore(operatorMenu);
        }

        function removeDifferentAddress() {
            var lostPassports = $("#differentAddress-area .differentAddressDiv");
            if (lostPassports && lostPassports.length > 1) {
                lostPassports[lostPassports.length - 1].remove();
            }
        }

        //是否有曾用名
        function usedNameRadio(flag) {
            if (flag == 'Y') {
                $("#usedName-area").show();
            } else {
                $("#usedName-area").hide();
            }
        }

        //永久居住
        function otherPermanentRadio(flag) {
            if (flag == 'Y') {
                $("#permanent-area").show();

            } else {
                $("#permanent-area").hide();
            }
        }
        //通讯地址是否相同
        function sameAddressRadio(flag) {
            if (flag == 'Y') {
                $("#differentAddress-area").hide();

            } else {
                $("#differentAddress-area").show();

            }
        }
        //身份证
        function notIdCardNum(flag) {
            if ($("#" + flag.id).prop("checked")) {
                $('#idCardCode').val("");
                $('#idCardCode').attr('disabled', true);
            } else {
                $('#idCardCode').attr('disabled', false);
            }
        }
        //美国社会安全号码
        function notSecurityNumber(flag) {
            if ($("#" + flag.id).prop("checked")) {
                $('#securityNumber').val("");
                $('#securityNumber').attr('disabled', true);
            } else {
                $('#securityNumber').attr('disabled', false);
            }
        }
        //美国纳税人身份号码
        function notTaxpayerNumber(flag) {
            if ($("#" + flag.id).prop("checked")) {
                $('#taxpayerNumber').val("");
                $('#taxpayerNumber').attr('disabled', true);
            } else {
                $('#taxpayerNumber').attr('disabled', false);
            }
        }
    </script>
</head>

<body>
    <div class="table-form">

        <!--基础信息-->
        <div id="personInfoArea">
            <h2 class="area-title">基础信息</h2>
            <div class="field-container">
                <label for="custFirstName" class="field-title">姓</label>
                <input type="text" id="custFirstName" name="custFirstName" class="text-input" />
            </div>
            <div class="field-container">
                <label for="custLastName" class="field-title">名</label>
                <input type="text" id="custLastName" name="custLastName" class="text-input" />
            </div>
            <div class="field-container">
                <label class="field-title">是否有曾用名？</label>
                <input type="radio" id="usedNameYes" name="isHaveUsedName" class="align-middle" onclick="usedNameRadio('Y');" />
                <label for="usedNameYes" class="align-middle">是</label>
                <input type="radio" id="usedNameNo" name="isHaveUsedName" class="align-middle" onclick="usedNameRadio('N');" />
                <label for="usedNameNo" class="align-middle">否</label>
                <div class="info-area hidden one">
                    <label style="display: block">请填写如下信息</label>
                    <hr/>
                    <div class="usedNameDiv" id="usedNameDivId1">
                        <div class="field-container">
                            <label class="field-title">曾用姓</label>
                            <input id="usedFirstName1" name="usedFirstName1" class="text-input" type="text" />
                        </div>
                        <div class="field-container">
                            <label class="field-title">曾用名</label>
                            <input id="usedLastName1" name="usedLastName1" class="text-input" type="text" />
                        </div>
                        <div id="operate_usedName_menu" class="control-menu">
                            <a href="javascript:void(0)" onclick="addUsedName()">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)" onclick="removeUsedName()">删除</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 曾用名 -->
            <div class="field-container">
                <label for="telecodeSurnName" class="field-title">姓的电报码</label>
                <input type="text" id="telecodeSurnName" name="telecodeSurnName" class="text-input" />
            </div>
            <div class="field-container">
                <label for="telecodeGivenName" class="field-title">名的电报码</label>
                <input type="text" id="telecodeGivenName" name="telecodeGivenName" class="text-input" />
            </div>
            <div class="field-container">
                <label class="field-title">性别</label>
                <input type="radio" id="genderM" name="gender" class="align-middle" />
                <label for="genderM" class="align-middle">男</label>
                <input type="radio" id="genderF" name="gender" class="align-middle" />
                <label for="genderF" class="align-middle">女</label>
            </div>
            <div class="field-container">
                <label class="field-title">婚姻状况</label>
                <select id="maritalStatus" name="maritalStatus">
						<option value="Y" selected="selected">已婚</option>
						<option value="S">单身</option>
						<option value="D">离婚</option>
				</select>
            </div>
            <div class="field-container">
                <label class="field-title">出生日期</label>
                <input id="birthday" name="birthday" class="Wdate text-input" type="text" onclick="WdatePicker()" />
            </div>
            <div class="field-container">
                <label for="birthCity" class="field-title">出生城市</label>
                <input type="text" id="birthCity" name="birthCity" class="text-input">
            </div>
            <div class="field-container">
                <label for="birthProvince" class="field-title">出生省份</label>
                <input type="text" id="birthProvince" name="birthProvince" class="text-input">
            </div>
            <div class="field-container">
                <label for="birthCountry" class="field-title">出生国家</label>
                <select id="birthCountry" name="birthCountry">
						<option value="CHIN" selected="selected">中国</option>
						<option value="HNK">中国香港特别行政区</option>
						<option value="HOKO">香港BNO</option>
				</select>
            </div>
            <div class="field-container">
                <label for="nationality" class="field-title">国籍</label>
                <select id="nationality" name="nationality">
						<option value="CHIN" selected="selected">中国</option>
				</select>
            </div>
            <div class="field-container">
                <label class="field-title">除了上述国籍外，您是否还拥有或曾经拥有其他国籍？</label>
                <input type="radio" id="nationalityYes" name="isHaveOtherNationality" class="align-middle" onclick="otherNationalityRadio('Y');" />
                <label for="nationalityYes" class="align-middle">是</label>
                <input type="radio" id="nationalityNo" name="isHaveOtherNationality" checked="checked" class="align-middle" onclick="otherNationalityRadio('N');" />
                <label for="nationalityNo" class="align-middle">否</label>
                <div class="info-area one">
                    <label style="display: block">请填写如下信息</label>
                    <hr/>
                    <div class="otherNationalityDiv" id="otherNationalityDivId1">
                        <div class="field-container">
                            <label for="otherNationality" class="field-title">其他国籍</label>
                            <select id="otherNationality" name="otherNationality">
								<option value="CHIN" selected="selected">中国</option>
							</select>
                        </div>
                        <div class="field-container">
                            <label class="field-title">您是否拥有其他国家或地区（国籍）的护照？</label>
                            <input type="radio" id="otherPassportYes1" name="isHaveOtherPassport1" onclick="otherPassportRadio('Y','1');" class="align-middle" />
                            <label for="otherPassportYes1" class="align-middle">是</label>
                            <input type="radio" id="otherPassportNo1" name="isHaveOtherPassport1" onclick="otherPassportRadio('N','1');" class="align-middle" />
                            <label for="otherPassportNo" class="align-middle">否</label>
                        </div>
                        <div class="info-area two">
                            <div class="otherPassportDiv">
                                <div class="field-container">
                                    <label for="otherPassport" class="field-title">护照号</label>
                                    <input id="otherPassport1" name="otherPassport1" class="text-input" type="text" />
                                </div>
                            </div>
                        </div>
                        <div id="operate_otherNationality_menu" style="float: right;margin-right: 10px;margin-top: 5px;">
                            <a href="javascript:void(0)" onclick="addOtherNationality()">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)" onclick="removeOtherNationality()">删除</a>
                        </div>
                    </div>


                </div>
                <br>
            </div>
            <!-- /是否有其他国籍 -->
            <!-- 永久居住 -->
            <div class="field-container">
                <label class="field-title">您现在是其他国家/地区的永久居民吗？</label>
                <input type="radio" id="permanentYes" name="isOtherPermanent" onclick="otherPermanentRadio('Y');" class="align-middle" />
                <label for="permanentYes" class="align-middle">是</label>
                <input type="radio" id="permanentNo" name="isOtherPermanent" checked="checked" onclick="otherPermanentRadio('N');" class="align-middle" />
                <label for="permanentNo" class="align-middle">否</label>
                <div class="info-area one">
                    <label style="display: block">请填写如下信息</label>
                    <hr/>
                    <div class="permanentDiv" id="permanentDivId1">
                        <div class="field-container">

                            <label for="permanent" class="field-title">国家</label>
                            <select id="permanent1" name="permanent1">
								<option value="CHIN" selected="selected">中国</option>
							</select>
                        </div>
                        <div id="operate_permanent_menu" class="control-menu">
                            <a href="javascript:void(0)" onclick="addPermanent()">添加</a>&nbsp;&nbsp;
                            <a href="javascript:void(0)" onclick="removePermanent()">删除</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /永久居住 -->
            <div class="field-container">
                <label for="idCardCode" class="field-title">身份证号</label>
                <input type="text" id="idCardCode" name="idCardCode" class="text-input" />
                <input type="checkbox" id="notIdCardNum" name="notIdCardNum" onclick="notIdCardNum(this);" />
                <label for="notHavePassportBookNum">没有/无法提供</label>
            </div>
            <div class="field-container">
                <label for="securityNumber" class="field-title">美国社会安全号码</label>
                <input type="text" id="securityNumber" name="securityNumber" class="text-input" disabled/>
                <input type="checkbox" id="securityNumberBox" name="securityNumberBox" checked="checked" onclick="notSecurityNumber(this);" />
                <label for="securityNumberBox">没有/无法提供</label>
            </div>
            <div class="field-container">
                <label for="securityNumber" class="field-title">美国纳税人身份号码</label>
                <input type="text" id="taxpayerNumber" name="taxpayerNumber" class="text-input" disabled/>
                <input type="checkbox" id="taxpayerNumberBox" name="taxpayerNumberBox" checked="checked" onclick="notTaxpayerNumber(this);" />
                <label for="taxpayerNumberBox">没有/无法提供</label>
            </div>
        </div>
        <div id="addressPhoneInfoArea">
            <div class=" field-container ">
                <label for="homeAddr " class="field-title ">家庭地址（英文）</label>
                <input type="text " id="homeAddr " name="homeAddr " class="text-input ">
                <span style="color: red;display: block ">备注:请录入英文地址，限88个字符（包含字母和标点符号）</span>
            </div>
            <div class="field-container ">
                <label for="homeCity " class="field-title ">城市</label>
                <input type="text " id="homeCity " name="homeCity " class="text-input ">
            </div>
            <div class="field-container ">
                <label for="homeProvince " class="field-title ">省份</label>
                <input type="text " id="homeProvince " name="homeProvince " class="text-input ">
            </div>
            <div class="field-container ">
                <label for="homePostCode " class="field-title ">邮编</label>
                <input type="text " id="homePostCode " name="homePostCode " class="text-input ">
            </div>
            <div class="field-container ">
                <label for="homeCountry " class="field-title ">国家</label>
                <select id="homeCountry " name="homeCountry ">
						<option value="CHIN " selected="selected ">中国</option>
					</select>
            </div>
            <div class="field-container ">
                <label class="field-title ">通信地址是否与家庭住址相同？</label>
                <input type="radio " id="sameAddressYes " name="isSameAddress " checked="checked " onclick="sameAddressRadio( 'Y') " class="align-middle " />
                <label for="sameAddressYes " class="align-middle ">是</label>
                <input type="radio " id="sameAddressNo " name="isSameAddress " onclick="sameAddressRadio( 'N') " class="align-middle " />
                <label for="sameAddressNo " class="align-middle ">否</label>
                <div class="info-area one ">
                    <label style="display: block ">请填写如下信息</label>
                    <hr/>
                    <div class="differentAddressDiv " id="differentAddressDivId1 ">
                        <div class="field-container ">
                            <label for="differentAddress " class="field-title ">通信地址</label>
                            <input type="text " id="differentAddress " name="differentAddress " class="text-input ">
                        </div>
                        <div class="field-container">
                            <label for="differentCity " class="field-title ">城市</label>
                            <input type="text " id="differentCity1 " name="differentCity1 " class="text-input ">
                        </div>
                        <div class="field-container">
                            <label for="differentProvince " class="field-title ">省份</label>
                            <input type="text " id="differentProvince1 " name="differentProvince1 " class="text-input ">
                            <input type="checkbox " id="differentProvinceBox " name="differentProvinceBox " />
                            <label for="differentProvinceBox ">没有/无法提供</label>
                        </div>
                        <div class="field-container">
                            <label for="different " class="field-title ">邮编</label>
                            <input type="text " id="differentPostCode1 " name="differentPostCode1 " class="text-input ">
                            <input type="checkbox " id="differentPostCodeBox " name="differentPostCodeBox " />
                            <label for="differentPostCodeBox ">没有/无法提供</label>
                        </div>
                        <div class="field-container">
                            <label for="differentCountry " class="field-title ">国家</label>
                            <select id="differentCountry1 " name="differentCountry1 ">
						<option value="CHIN " selected="selected ">中国</option>
					    </select>
                        </div>
                    </div>
                </div>
            </div>


            <div class="field-container ">
                <label for="fistPhone " class="field-title ">首选电话号码</label>
                <input type="text " id="fistPhone " name="fistPhone " class="text-input ">
                <input type="checkbox " id="fistPhoneBox " name="fistPhoneBox " />
                <label for="fistPhoneBox ">没有/无法提供</label>
            </div>
            <div class="field-container ">
                <label for="reservePhone " class="field-title ">备选电话号码</label>
                <input type="text " id="reservePhone " name="reservePhone " class="text-input ">
                <input type="checkbox " id="reservePhoneBox " name="reservePhoneBox " />
                <label for="reservePhoneBox ">没有/无法提供</label>
            </div>
            <div class="field-container ">
                <label for="email " class="field-title ">电子邮箱</label>
                <input type="text " id="email " name="email " class="text-input ">
            </div>
        </div>
        <!-- 基本信息 -->
    </div>

    <!-- o -->
</body>

</html>