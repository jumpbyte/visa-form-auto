body {
    padding-left: 20px;
    width: 900px;
}

body * {
    font-size: 16px;
}

.clear {
    clear: both;
}

select {
    width: 260px;
    height: 28px;
}

.table-form {
    padding: 5px 5px 5px
}

.table-form form {
    margin-top: 60px;
}

div.table-form .error {
    color: red;
}

div.table-form label.error {
    display: none;
}

.area-title {
    font-size: 20px;
    color: hotpink;
}

.field-container {
    display: block;
    margin-top: 10px;
}

.field-container .field-title {
    display: block;
    margin-bottom: 3px;
}

.field-container .text-input {
    width: 260px;
    height: 25px;
}

.field-container .address-input {
    width: 320px;
    height: 25px;
}

.info-area {
    background-color: #cad3e9;
}

.one {
    margin: 5px 0px 5px 0px;
    padding: 5px 0px 10px 5px;
    background-color: beige;
    width: 560px;
}

.two {
    margin: 5px 0px 5px 5px;
    padding: 5px 0px 10px 5px;
    background-color: bisque;
    width: 500px;
}

.control-menu {
    display: inline-block;
    margin: 5px 0px 0px 180px
}

.align-middle {
    vertical-align: middle;
}

.hidden {
    display: none;
}

.float-left {
    float: left;
}

.float-right {
    float: left;
}

.show {
    display: block;
    visibility: visible;
}

.operate-menu-area {
    display: block;
    margin-top: 3px;
    margin-bottom: 10px;
    height: 50px;
}

.operate-menu-area .button {
    position: relative;
    left: 0px;
    top: 0px;
    width: 155px;
    height: 35px;
    margin: 10px 30px 0px 10px;
    background: inherit;
    background-color: rgba(255, 102, 153, 1);
    border: none;
    border-radius: 5px;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none;
    font-family: 'Arial Negreta', 'Arial';
    font-weight: 700;
    font-style: normal;
    font-size: 14px;
    vertical-align: middle;
    text-align: center
}

.operate-menu-area .button a {
    color: white;
    margin: auto;
    position: relative;
    margin-top: 7px;
    display: block;
    height: 35px;
}